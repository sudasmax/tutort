                    <div class="logo">
                        <a href="/"><img src="@Url.Content("~/images/logo/logo_top.png")" title="@Tutort.Web.Localization.General.Name - @Tutort.Web.Localization.General.Slogan" alt="@Tutort.Web.Localization.General.Name - @Tutort.Web.Localization.General.Slogan"></a>
