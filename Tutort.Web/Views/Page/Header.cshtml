@model Tutort.Web.ViewModels.Page.HeaderViewModel

<header>
    <div id="top-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="home-account">
                        @Html.ActionLink(Tutort.Web.Localization.Header.TopMenu_Home, "Index", "Home")
